<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.WordelApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="buttonStyle">@style/KeyboardButton</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <style name="Theme.WordelApplication" parent="Base.Theme.WordelApplication"></style>

    <style name="KeyboardButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@color/keyboard_default</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
